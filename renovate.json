{
  "extends": ["@cybozu"],
  "packageRules": [
    {
      "packageNames": ["google-closure-deps"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "packageNames": ["google-closure-compiler"],
      "depTypeList": ["peerDependencies"],
      "enabled": false
    }
  ],
  "npm": {
    "schedule": "on monday"
  },
  "lockFileMaintenance": {
    "automerge": false,
    "schedule": "at any time"
  },
  "prConcurrentLimit": 0
}
